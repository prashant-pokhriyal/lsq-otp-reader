{
  "name": "Leadsquared OTP Reader",
  "version": "1.0",
  "description": "Automatically reads OTP",
  "options_page": "options.html",
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.leadsquared.com/*"
      ],
      "exclude_matches": [
        "https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  // "browser_action": {
  //   "default_popup": "index.html",
  //   "default_title": "Open the popup"
  // },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-3Q449gWzYzZxQkWSaWhX5FDq71O/f+a+OonQ9DJ2LDk='; object-src 'self'",
  "manifest_version": 2
}